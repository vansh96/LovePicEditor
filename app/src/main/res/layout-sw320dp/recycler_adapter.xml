    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F0E0CD">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
